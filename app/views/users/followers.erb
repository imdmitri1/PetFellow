
 <!-- user header partial -->

 <% if @user.followers.any? %>
   <ul>
     <% @user.followers.each do |follower| %>
       <li>
         <a href="/users/<%=follower.id%>">
           <div><img src="<%= follower.avatar %>" alt=""> </div>
           <div><%= follower.username %><%= follower.name %></div>
         </a>
        </li>
     <% end %>
     </ul>
 <% else %>
   <p>You don't have followers yet</p>
 <% end %>
